# File konfigurasi MLflow Project
# Mendefinisikan entry point dan lingkungan

name: TF_CNN_Example

# Menentukan bahwa lingkungan harus dibuat menggunakan file conda.yaml
conda_env: conda.yaml

entry_points:
  main:
    # Mendefinisikan parameter yang bisa diterima dari command line
    parameters:
      epochs: { type: int, default: 3 }
    # Perintah yang akan dieksekusi saat 'mlflow run' dipanggil
    command: "python modelling.py --epochs {epochs}"
